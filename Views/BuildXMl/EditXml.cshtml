@model List<Taxweb.Models.XmlEditVM>

@using (Html.BeginForm("SaveXml", "Tax", FormMethod.Post))
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label>@Model[i].Label</label>

            @Html.HiddenFor(m => m[i].XPath)
            @Html.TextBoxFor(m => m[i].Value)
        </div>
    }

    <button type="submit">Lưu XML</button>
}
